<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <id.pazpo.agent.views.AnimatedGifImageView
        android:id="@+id/agiv_holder_loadmore"
        android:layout_width="@dimen/loader_img_rv_medium"
        android:layout_height="@dimen/loader_img_rv_medium"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/pb_holder_loadmore"
        android:layout_width="@dimen/loader_img_rv_medium"
        android:layout_height="@dimen/loader_img_rv_medium"
        android:layout_marginBottom="@dimen/loader_margin_smallest"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Loading ..."
        android:visibility="gone"/>
</LinearLayout>
