<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_network_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/rl_network_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_network_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_account_circle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@+id/rl_network_list_action_group"
            android:layout_toStartOf="@+id/rl_network_list_action_group"
            android:layout_toRightOf="@+id/civ_network_list"
            android:layout_toEndOf="@+id/civ_network_list"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_network_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Michael Liem"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/tv_network_list_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Era Radiant Bintaro"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:maxLines="1"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_network_list_action_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <Button
                android:id="@+id/btn_network_list_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/button_follow"
                android:textColor="@color/black"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/tv_network_list_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:text="@string/button_following"
                android:textColor="@color/black"
                android:visibility="visible"/>
            <ProgressBar
                android:id="@+id/pb_network_list"
                android:layout_width="@dimen/loader_img_rv_small"
                android:layout_height="@dimen/loader_img_rv_small"
                android:layout_centerInParent="true"
                android:visibility="invisible"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.1"
        android:background="@color/black"/>

</LinearLayout>