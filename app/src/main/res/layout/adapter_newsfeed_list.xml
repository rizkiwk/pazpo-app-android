<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/content_margin_small"
    android:layout_marginRight="@dimen/content_margin_small"
    android:layout_marginLeft="@dimen/content_margin_small"
    card_view:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_newsfeed_list_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_account_circle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_toRightOf="@id/civ_newsfeed_list_profile"
                android:layout_toEndOf="@id/civ_newsfeed_list_profile"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp">

                    <TextView
                        android:id="@+id/tv_newsfeed_list_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Michael Liem"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/tv_newsfeed_list_dash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_newsfeed_list_office"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Era Radiant Bintaro"
                        android:textColor="@color/grey"
                        android:textSize="14sp"
                        android:maxLines="1"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_newsfeed_list_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diposting 25 Dec 2016"
                    android:textColor="@color/grey"
                    android:textSize="14sp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_newsfeed_list_expand_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_expand_more"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:tint="@color/grey"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_newsfeed_list_expand_less"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_expand_less"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:tint="@color/grey"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_newsfeed_list_listing_type"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:padding="4dp"
                android:gravity="center_horizontal"
                android:background="@drawable/tv_red_background"
                android:text="@string/content_wtb"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textAllCaps="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_newsfeed_list_listing_type"
                android:layout_toEndOf="@+id/tv_newsfeed_list_listing_type"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_newsfeed_list_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Cari rumah 4 kamar daerah Bintaro. Klien langsung tanpa neko-neko."
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_newsfeed_list_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga : Rp.2.000.000,-"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/tv_newsfeed_list_comission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Komisi : 2.5%"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:visibility="gone"/>
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:alpha="0.2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:alpha="0.2"/>

        <Button
            android:id="@+id/btn_newsfeed_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="@string/button_message"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</android.support.v7.widget.CardView>