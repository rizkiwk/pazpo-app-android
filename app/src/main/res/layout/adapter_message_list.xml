<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_message_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_message_list"
        android:layout_width="@dimen/img_circle_small"
        android:layout_height="@dimen/img_circle_small"
        android:layout_marginRight="@dimen/content_margin_large"
        android:layout_marginEnd="@dimen/content_margin_large"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_account_circle"/>

    <TextView
        android:id="@+id/tv_message_list_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/civ_message_list"
        android:layout_toRightOf="@id/civ_message_list"
        android:layout_toEndOf="@id/civ_message_list"
        android:ellipsize="end"
        android:maxLength="35"
        android:text="Budi Setiawan"/>

    <TextView
        android:id="@+id/tv_message_list_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/content_margin_large"
        android:layout_marginRight="@dimen/content_margin_smallest"
        android:layout_marginEnd="@dimen/content_margin_smallest"
        android:layout_toLeftOf="@+id/iv_chevron_right"
        android:layout_toStartOf="@+id/iv_chevron_right"
        android:maxLength="8"
        android:text="14.05"/>

    <TextView
        android:id="@+id/tv_message_list_notif"
        android:layout_width="@dimen/icon_alert_small"
        android:layout_height="@dimen/icon_alert_small"
        android:layout_toStartOf="@+id/iv_chevron_right"
        android:layout_toLeftOf="@+id/iv_chevron_right"
        android:layout_below="@id/tv_message_list_time"
        android:layout_marginRight="@dimen/content_margin_small"
        android:layout_marginEnd="@dimen/content_margin_small"
        android:background="@drawable/button_circle"
        android:gravity="center"
        android:text="0"/>

    <TextView
        android:id="@+id/tv_message_list_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_message_list_username"
        android:layout_alignStart="@id/tv_message_list_username"
        android:layout_toLeftOf="@+id/tv_message_list_time"
        android:layout_toStartOf="@+id/tv_message_list_time"
        android:layout_below="@id/tv_message_list_username"
        android:layout_marginTop="@dimen/content_margin_small"
        android:maxLines="1"
        android:text="Gan propertinya bisa di-resell?..."/>

    <ImageView
        android:id="@+id/iv_chevron_right"
        android:layout_width="@dimen/content_margin_largest"
        android:layout_height="@dimen/content_margin_largest"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_chevron_right"
        android:tint="@color/toolbarAccent"/>

</RelativeLayout>
