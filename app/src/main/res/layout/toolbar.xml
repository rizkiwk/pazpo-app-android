<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ToolbarStyle"
    android:id="@+id/toolbar_main"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:minHeight="?attr/actionBarSize"
    android:gravity="left"
    android:background="@color/toolbarBackground"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetEnd="0dp"
    app:layout_collapseMode="pin">

    <ImageButton
        android:id="@+id/ib_tbmain_back"
        android:layout_width="@dimen/btn_img_navbar_small"
        android:layout_height="@dimen/btn_img_navbar_small"
        android:layout_marginLeft="@dimen/form_box_margin_left"
        android:layout_marginStart="@dimen/form_box_margin_left"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_arrow_back"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_tbmain_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textStyle="bold"/>

</android.support.v7.widget.Toolbar>